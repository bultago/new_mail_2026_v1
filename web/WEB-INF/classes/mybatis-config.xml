<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <!-- 캐시 사용 -->
        <setting name="cacheEnabled" value="true" />
        
        <!-- 지연 로딩 사용 -->
        <setting name="lazyLoadingEnabled" value="true" />
        
        <!-- 다중 결과셋 사용 -->
        <setting name="multipleResultSetsEnabled" value="true" />
        
        <!-- 컬럼명을 카멜케이스로 자동 변환 -->
        <setting name="mapUnderscoreToCamelCase" value="true" />
        
        <!-- NULL 값 처리 -->
        <setting name="callSettersOnNulls" value="false" />
        
        <!-- 자동 키 생성 -->
        <setting name="useGeneratedKeys" value="true" />
        
        <!-- 기본 실행 타임아웃 -->
        <setting name="defaultStatementTimeout" value="25" />
        
        <!-- 기본 페치 사이즈 -->
        <setting name="defaultFetchSize" value="100" />
        
        <!-- 안전한 Row Bounds 사용 -->
        <setting name="safeRowBoundsEnabled" value="false" />
        
        <!-- 안전한 Result Handler 사용 -->
        <setting name="safeResultHandlerEnabled" value="true" />
        
        <!-- 로컬 캐시 사용 -->
        <setting name="localCacheScope" value="SESSION" />
        
        <!-- JDBC 타입이 NULL인 경우 처리 -->
        <setting name="jdbcTypeForNull" value="OTHER" />
        
        <!-- 지연 로딩 시 강제 로딩 -->
        <setting name="lazyLoadTriggerMethods" value="equals,clone,hashCode,toString" />
    </settings>
    
    <typeAliases>
        <!-- 기본 타입 별칭들 -->
        <typeAlias alias="string" type="java.lang.String" />
        <typeAlias alias="long" type="java.lang.Long" />
        <typeAlias alias="int" type="java.lang.Integer" />
        <typeAlias alias="double" type="java.lang.Double" />
        <typeAlias alias="float" type="java.lang.Float" />
        <typeAlias alias="boolean" type="java.lang.Boolean" />
        <typeAlias alias="date" type="java.util.Date" />
        <typeAlias alias="decimal" type="java.math.BigDecimal" />
        <typeAlias alias="bigdecimal" type="java.math.BigDecimal" />
    </typeAliases>
    
    <typeHandlers>
        <!-- 날짜 타입 핸들러 -->
        <typeHandler handler="org.apache.ibatis.type.DateTypeHandler" javaType="java.util.Date" />
        <typeHandler handler="org.apache.ibatis.type.SqlTimestampTypeHandler" javaType="java.sql.Timestamp" />
    </typeHandlers>
    
    <mappers>
        <!-- Mapper XML 파일들은 MapperScannerConfigurer에서 자동 스캔 -->
    </mappers>
</configuration>
