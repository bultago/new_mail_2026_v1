<!-- 
    Terrace Database Framework
-->
<databases> 
    <datasource-list>
        <default-bindname>terraceDB</default-bindname>
        <!-- 
             - [datasources option]
             - [framework : database framework define.]
             - EX ==> ibatis : use IBATIS Framework,
                      jdbc : default jdbc.
             - [database : DataBase type]
            - EX == > MYSQL : mysql , Postgresql : postgresql , Oracle : oracle
         -->
        <datasources database="postgresql" >
            <bindname>terraceDB</bindname>
        <!--
            - [datasource option]
        
            - [driver : DataBase Driver Name]
            - EX ==> Mysql : com.mysql.jdbc.Driver
                    (core.log.jdbc.driver.MysqlDriver), 
                Postgresql : org.postgresql.Driver 
                    (core.log.jdbc.driver.PostgresqlDriver),
                Oracle : oracle.jdbc.driver.OracleDriver
                    (core.log.jdbc.driver.OracleDriver)
                    
            - [modetype : datasource type setting]
            - TYPE ==> single : non Master/Slave , 
                        master : MasterMode Datasource, 
                        slave : SlaveMode Datasource
            
            - [user : DB User Name]
            - [passwd : DB Password]
            - [url : DB Connection URL ]
            - [maxactive : Max Activation pool count]
            - [maxidle : Max Idle pool count]
            - [maxwait : Max Waite pool count]
            - [validationquery : pool connection check query]
            - [relation : Master/Slave mode relation ID]
            - [slave-active : slave active type]
            - EX ==> readonly , active
            
            - EX
-->
