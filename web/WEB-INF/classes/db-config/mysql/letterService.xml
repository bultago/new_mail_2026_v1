<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.terracetech.tims.webmail.Letter.mapper.LetterMapper">	
	
	<select id="readLetterList" parameterType="int" resultMap="letterResult">
		select * from mail_letter where mail_domain_seq = #{mailDomainSeq} or  mail_domain_seq is null
	</select>	
		
	<select id="readLetter" parameterType="int" resultMap="letterResult">
		select * from mail_letter where letter_seq = #{letterSeq}
	</select>
	
	<select id="totalLetterCount" parameterType="int" resultType="int">
		select count(letter_seq) from mail_letter where mail_domain_seq = #{mailDomainSeq} or  mail_domain_seq is null
	</select>
</mapper>