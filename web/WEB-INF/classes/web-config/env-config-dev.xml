<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<basic-setting>
		<!-- unit is minute (720 min = 12 hour) -->
		<property name="log.debug" value="false" />
		<property name="auth.timeout" value="720" />
		<property name="tmpdir" value="d:/webtemp"/>    	
		<property name="cookie.domain" value=""/>
		<property name="cookie.name" value="tims7webmail"/>
		<property name="timeout.session.name" value="twsessiontime"/>
		<property name="webfolder.home" value="/etc/WEBFOLDER"/>
		<property name="webfolder.root" value="WEBFOLDERROOT"/>
		<property name="note.home" value="/etc/NOTE"/>
		<property name="white.admin" value="hamadm"/>
		<property name="spam.admin" value="spamadm"/>
		<property name="setup.state" value="ko"/>
		<property name="web.port" value="443"/>
		<property name="file.download.charset" value=""/>
		<property name="alim.crypt.method" value=""/>
		<property name="inline.image.resizing" value="false"/>
		<property name="inline.image.limit.width" value="650"/>		
		<!-- 2012.05.17 file upload check S -->
		<property name="attachCheck.use" value="false"/>
		<property name="attachCheck.url" value="http://127.0.0.1/;http://127.0.0.2/"/>
		<!-- 2012.05.17 file upload check E -->
		<!-- Tomcat SSL 인증서 사용하고  web.xml의 security-constraint.transport-guarantee.CONFIDENTIAL 사용 시 필수 로 true 로 세팅해야함.-->
		<property name="ssl.cert.force.rediret.use" value="true"/>
	</basic-setting>
	<report-setting>
		<property name="white.report.address" value="terracehamadm@terracetech.com"/>
		<property name="spam.report.address" value="terracespamadm@terracetech.com"/>
		<property name="report.server" value="mail.terracetech.com"/>
		<property name="report.server.port" value="25"/>
		<property name="report.server.protocol" value="smtp"/>
		
		<!-- 국가 사이버 안전센터 신고 정보 -->
		<property name="report.spam.ncsc.use" value="false"/>
		<property name="report.spam.ncsc.address" value="cert@ncsc.go.kr"/>
	</report-setting>
	<virus-setting>
		<property name="virus.server" value="127.0.0.1"/>
		<property name="virus.server.port" value="17777"/>
	</virus-setting>
	<mail-setting>
		<property name="default.charset" value="UTF-8" />	    
	    <property name="mail.store.protocol" value="imap"/>
	    <property name="mail.imap.port" value="143"/>
	    <property name="mail.pop3.port" value="110"/>
	    <property name="mail.debug" value="false"/>
	    <property name="mail.imap.fetchsize" value="1MB"/>
		<property name="mail.imap.appendbuffersize" value="1GB"/>	    
		<property name="mail.connectionpool.debug" value="false"/>
		<property name="mail.connectionpoolsize" value="2"/>				
		<!-- Timeout value in milliseconds -->
		<property name="mail.connectionpooltimeout" value="30000"/>
		<property name="mail.connectiontimeout" value="5000"/>
		<!-- TCUSTOM-2262 IMAP Connection Time Out 20161031 : 5 minutes(60 * 5) setting --> 
 		<property name="mail.imap.timeout" value="30000"/>
		<property name="smtp.serv" value="127.0.0.1"/>
	    <property name="smtp.port" value="25"/>
	    <property name="smtp.connectiontimeout" value="60000"/>	    
	    <property name="send.maxrcpts" value="100"/>	    
	    <property name="send.allowmassmail" value="true"/>	    
	    <!-- mdn.host 적용시(SSL 강제 Redirect 시 : web.xml에 등록) 무조건 port추가 하여야함. 예) https://localhost:443 -->
	    <property name="mdn.host" value="https://localhost:443"/>
	    <property name="mdn.action" value="/mail/receiveMDN.do?mdnData=" />
	    <property name="mdn.tag.prefix" value="&lt;table id='TMSMDN' style='display: none;'&gt;&lt;tbody&gt;&lt;tr&gt;&lt;td&gt;&lt;img src='" />
		<property name="mdn.tag.postfix" value="' border='0'&gt;&lt;/td&gt;&lt;/tr&gt;&lt;/tbody&gt;&lt;/table&gt;" />
	    <property name="secure.action" value="/mail/readSecureMessage.do" />
	    <property name="js.minify" value="false" />
	    <!-- LOGIN PARAMETER (ID, PW) RSA ENCRYPT USE -->
	    <property name="login.rsa.encrypt.use" value="true"/>	    
	</mail-setting>
	<ladmin-setting>
		<property name="ladmin.serv" value="127.0.0.1"/>
    	<property name="ladmin.port" value="10030"/>
    	<property name="ladmin.debug" value="false"/>
	</ladmin-setting>
	<attach-setting>		
    	<property name="attach.dir" value="/design/common/image/attaches/"/>
    	<property name="attach.url" value="/design/common/image/attaches/"/>
    	<property name="upimage.url" value="/file/viewImage.do?"/>
    	<property name="letter.url" value="/mail/viewLetterImg.do?"/>
    	<property name="signimage.attach" value="true"/>    	
	</attach-setting>	
	<util-setting>
		<!-- 
		SecureMail
		tms : default Securemail
		initech : Intitech SecureMail
		softforum : SoftForum SecureMail 
		-->		
		<property name="duplicate.check" value="true"/>
		<property name="secure.module" value="tms"/>
		<!-- plugin useage -->
		<property name="plugin.useage" value="false"/>
		<property name="multidomain.use" value="false"/>
		<property name="mobile.use" value="false"/>
    	<property name="bbs.admin" value="tims_bbs_storage_user"/>
    	<property name="webfolder.admin" value="tims_webfolder_storage_user"/>
    	<property name="ocx.check.interval" value="0"/>
    	<property name="ocx.orgjs" value="/js/ocx/ocx_load.js"/>
    	<property name="ocx.tempjs" value="/js/ocx/ocx_load_template.js"/>
    	<property name="ocx.url" value="http://spamlive.terracetech.com/ocx/default/"/>    	
    	<property name="ocx.file" value="TWebMail=localmailbox/TWebMail.cab|TWebPowerUp=power_upload/TWebPowerUp.cab|TMS7OUTLOOK=tms_addin/TMSAddin.cab"/>
    	<property name="web.ext.url" value="/hybrid/|/mobile/calendar|/mobile/basic/calendar/calendar.js|/mobile/bbs|/design/|/js/|/i18n"/>
    	<property name="mobile.version.limit" value="AppVer=1.0.2|Iphone=4.0|Android=2.2"/>
		<property name="iphone.update.url" value="http://tms7.daou.co.kr:9014/app/applink.html"/>
		<property name="android.update.url" value="http://tms7.daou.co.kr:9014/app/applink.html"/>
		
		<!-- geoip 설정 정보 -->
		<property name="geoip.db.use" value="false"/>
		<property name="geoip.db.path" value="/opt/TerraceTims/var/geoip/GeoLite2-Country.mmdb"/>
		<property name="local.ip.range" value="10.0.0.0-10.255.255.255|172.16.0.0-172.31.255.255|192.168.0.0-192.168.255.255"/>
	</util-setting>	
	<plugin-setting>
		<!-- 3rd Part Module -->
		<!-- Secure Login (normal : default login,PKI : PKI Login)-->				
		<property name="login.mode" value="normal"/>
		<!-- PKI Useage enable/disable -->
		<property name="pki.use" value="disable"/>
		<!-- PKI Vender (softforum / etc..)-->
		<property name="pki.module.vender" value=""/>
		<!-- PKI Type (NPKI/EPKI/GPKI)-->
		<property name="pki.type" value=""/>
				
		<!-- Initech Secure Module -->
		<property name="initech.clientkey" value="defaultmailid"/>
		<property name="initech.properties.path" value="/opt/TerraceTims/web/webmail/webapps/ROOT/WEB-INF/classes/INISAFEMail.properties"/>
		
		<!-- Softforum Secure Module -->
		<property name="softforum.ckkeypro.use" value="false"/>
		<property name="softforum.ckkeypro.url" value="http://ck.softforum.co.kr/CKKeyPro/jne/CKKeyPro.js"/>					
		<property name="softforum.ckwebpro.use" value="false"/>
		<property name="softforum.ckwebpro.url" value="http://ck.softforum.co.kr/CKWebPro/jne/CKWebPro.js"/>
		<property name="softforum.xecureweb.use" value="false"/>	
		<!-- Xecure ExpressE Write mode (PKI/PASSWD) -->
		<property name="softforum.express.type" value=""/>
		<!-- Xecure ExpressE PKI Write max RCPT count) -->
		<property name="softforum.express.maxsendcount" value="50"/>
	</plugin-setting>  
</configuration>