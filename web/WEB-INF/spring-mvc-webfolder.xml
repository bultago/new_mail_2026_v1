<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- WebFolder Module Controllers -->
    <bean id="folderMainController" class="com.terracetech.tims.webmail.webfolder.controller.FolderMainController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="folderTreeController" class="com.terracetech.tims.webmail.webfolder.controller.FolderTreeController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="listFoldersController" class="com.terracetech.tims.webmail.webfolder.controller.ListFoldersController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="listFolderDataController" class="com.terracetech.tims.webmail.webfolder.controller.ListFolderDataController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="createFolderController" class="com.terracetech.tims.webmail.webfolder.controller.CreateFolderController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="renameFolderController" class="com.terracetech.tims.webmail.webfolder.controller.RenameFolderController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="deleteFoldersController" class="com.terracetech.tims.webmail.webfolder.controller.DeleteFoldersController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="copyAndMoveFoldersController" class="com.terracetech.tims.webmail.webfolder.controller.CopyAndMoveFoldersController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="uploadFilesController" class="com.terracetech.tims.webmail.webfolder.controller.UploadFilesController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="downloadFileController" class="com.terracetech.tims.webmail.webfolder.controller.DownloadFileController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="shareFolderController" class="com.terracetech.tims.webmail.webfolder.controller.ShareFolderController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="makeShareFolderController" class="com.terracetech.tims.webmail.webfolder.controller.MakeShareFolderController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="addShareFolderController" class="com.terracetech.tims.webmail.webfolder.controller.AddShareFolderController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="deleteShareFolderController" class="com.terracetech.tims.webmail.webfolder.controller.DeleteShareFolderController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="searchShareFolderController" class="com.terracetech.tims.webmail.webfolder.controller.SearchShareFolderController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="searchUserController" class="com.terracetech.tims.webmail.webfolder.controller.SearchUserController">
        <property name="mailUserManager" ref="mailUserManager"/>
    </bean>
    <bean id="webfolderPopupController" class="com.terracetech.tims.webmail.webfolder.controller.WebfolderPopupController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>
    <bean id="writeAttachFileController" class="com.terracetech.tims.webmail.webfolder.controller.WriteAttachFileController">
        <property name="webfolderManager" ref="webfolderManager"/>
    </bean>

    <!-- URL Mapping for WebFolder Module -->
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/webfolder/main.do">folderMainController</prop>
                <prop key="/webfolder/tree.do">folderTreeController</prop>
                <prop key="/webfolder/listFolders.do">listFoldersController</prop>
                <prop key="/webfolder/listData.do">listFolderDataController</prop>
                <prop key="/webfolder/createFolder.do">createFolderController</prop>
                <prop key="/webfolder/renameFolder.do">renameFolderController</prop>
                <prop key="/webfolder/deleteFolders.do">deleteFoldersController</prop>
                <prop key="/webfolder/copyAndMove.do">copyAndMoveFoldersController</prop>
                <prop key="/webfolder/uploadFiles.do">uploadFilesController</prop>
                <prop key="/webfolder/downloadFile.do">downloadFileController</prop>
                <prop key="/webfolder/shareFolder.do">shareFolderController</prop>
                <prop key="/webfolder/makeShareFolder.do">makeShareFolderController</prop>
                <prop key="/webfolder/addShareFolder.do">addShareFolderController</prop>
                <prop key="/webfolder/deleteShareFolder.do">deleteShareFolderController</prop>
                <prop key="/webfolder/searchShareFolder.do">searchShareFolderController</prop>
                <prop key="/webfolder/searchUser.do">searchUserController</prop>
                <prop key="/webfolder/popup.do">webfolderPopupController</prop>
                <prop key="/webfolder/writeAttach.do">writeAttachFileController</prop>
            </props>
        </property>
        <property name="order" value="108"/>
    </bean>

    <!-- View Definitions for WebFolder Module -->
    <bean id="webfolderMain" class="org.springframework.web.servlet.view.InternalResourceView">
        <property name="url" value="/classic/webfolder/main.jsp"/>
    </bean>
    <bean id="webfolderTree" class="org.springframework.web.servlet.view.InternalResourceView">
        <property name="url" value="/classic/webfolder/tree.jsp"/>
    </bean>
    <bean id="webfolderList" class="org.springframework.web.servlet.view.InternalResourceView">
        <property name="url" value="/classic/webfolder/list.jsp"/>
    </bean>
    <bean id="webfolderShare" class="org.springframework.web.servlet.view.InternalResourceView">
        <property name="url" value="/classic/webfolder/share.jsp"/>
    </bean>
    <bean id="webfolderPopup" class="org.springframework.web.servlet.view.InternalResourceView">
        <property name="url" value="/classic/webfolder/popup.jsp"/>
    </bean>
    <bean id="webfolderSuccess" class="org.springframework.web.servlet.view.InternalResourceView">
        <property name="url" value="/common/success.jsp"/>
    </bean>
</beans>