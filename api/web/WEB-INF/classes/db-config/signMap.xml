<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Sign">

  <!-- Use type aliases to avoid typing the full classname every time. -->
	<typeAlias alias="sign" type="com.terracetech.tims.webmail.setting.vo.SignVO" />
	<typeAlias alias="signData" type="com.terracetech.tims.webmail.setting.vo.SignDataVO" />
	
	<!--
		Result maps describe the mapping between the columns returned from a
		query, and the class properties. A result map isn't necessary if the
		columns (or aliases) match to the properties exactly.
	-->
	<resultMap id="signDataResult" class="signData">
		<result property="signSeq" column="sign_seq" />
		<result property="userSeq" column="mail_user_seq" />
		<result property="defaultSign" column="default_sign" />
		<result property="signName" column="sign_name" />
		<result property="signMode" column="sign_mode" />
		<result property="signImage" column="sign_img"/>
		<result property="signImageName" column="sign_img_name"/>
		<result property="signText" column="sign_text"/>
	</resultMap>
	
	<resultMap id="signSimpleDataResult" class="signData">
		<result property="signSeq" column="sign_seq" />
		<result property="defaultSign" column="default_sign" />
		<result property="signName" column="sign_name" />
	</resultMap>
	
	<resultMap id="signResult" class="sign" >
    	<result property="mailUserSeq" column="mail_user_seq"/>
    	<result property="signApply" column="sign_apply" />
    	<result property="signLocation" column="sign_location" />
	</resultMap>
	
	<cacheModel id="signCache" type="MEMORY" readOnly="false" serialize="true">
	  	<flushInterval seconds="10"/>
		<flushOnExecute statement="Sign.insertSign"/>
		<flushOnExecute statement="Sign.updateSign"/>
		<flushOnExecute statement="Sign.deleteSign"/>
		<property name="reference-type" value="SOFT"/>
	</cacheModel>
</sqlMap>