<struts>
    
    <package name="jmobile" namespace="/jm" extends="tims-jmobile-default">
    	    	
		<action name="welcome" class="JMobileWelcomeAction">
			<result name="main">/mobile/simple/common/menu.jsp</result>
			<result name="login">/mobile/simple/common/login.jsp</result>
			<result name="notservice">/mobile/simple/common/notService.jsp</result>
		</action>
		
		<action name="login" class="JMobileLoginAction">
			<result name="success" type="redirect">/jm/welcome.do</result>
			<result name="fail">/mobile/simple/common/alert.jsp</result>
		</action>
		
		<action name="logout" class="JMobileLogoutAction">
			<result name="success">/mobile/simple/common/logout.jsp</result>			
		</action>
		
		<action name="mailread" class="JMobileMailReadAction">
			<result name="success">/mobile/simple/mail/mailread.jsp</result>			
		</action>
		
		<action name="mailwrite" class="JMobileMailWriteAction">
			<result name="success">/mobile/simple/mail/mailwrite.jsp</result>						
		</action>
		
		<action name="prework" class="JMobileMailWorkAction" method="preworkAction">
			<result name="menu" type="redirectAction">
	            <param name="actionName">welcome</param>	            
	        </result>
			<result name="maillist" type="redirectAction">
	            <param name="actionName">maillist</param>	                   	            
	        </result>
	        <result name="mailread" type="redirectAction">
	            <param name="actionName">mailread</param>	                  	            
	        </result>
	        <result name="mailwrite" type="redirectAction">
	            <param name="actionName">mailwrite</param>	            	            	            
	        </result>		
		</action>		
		
